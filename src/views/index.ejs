<%- include('components/head', { page: { title: 'Главная | NewS' } }) %>
<%- include('components/navbar') %>

<main class="bg-slate-50">
    <section class="container mx-auto max-w-6xl px-4 py-12 space-y-12">
        <div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
            <div class="space-y-3">
                <p class="text-xs uppercase tracking-[0.3em] text-slate-500">Лента редакции</p>
                <h1 class="text-4xl font-bold tracking-tight text-slate-900">Главные материалы сегодня</h1>
                <p class="max-w-2xl text-slate-600">Свежие статьи, аналитика и новости, которые нужно прочитать. Всё в одном месте и без лишнего визуального шума.</p>
            </div>
            <a href="/news" class="inline-flex items-center gap-2 rounded-full border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm transition hover:-translate-y-0.5 hover:bg-white">
                Смотреть все публикации
                <span aria-hidden="true">→</span>
            </a>
        </div>

        <%
            const list = Array.isArray(news) ? news : []
            const hasNews = list.length > 0
            const featured = hasNews ? list[0] : null
            const otherNews = hasNews ? list.slice(1) : []
            const formatDate = (value) => new Date(value).toLocaleDateString('ru-RU', { day: 'numeric', month: 'short' })
            const preview = (text, limit = 160) => {
                if (!text) return ''
                const clean = text.replace(/\s+/g, ' ').trim()
                return clean.length > limit ? clean.slice(0, limit) + '…' : clean
            }
        %>

        <% if (featured) { %>
            <div class="grid gap-8 xl:grid-cols-3 xl:gap-10">
                <article class="relative overflow-hidden rounded-2xl border border-slate-200 bg-white p-8 shadow-sm xl:col-span-2">
                    <div class="absolute inset-0 pointer-events-none bg-gradient-to-br from-white via-white to-transparent"></div>
                    <div class="relative space-y-6">
                        <div class="flex flex-wrap items-center gap-3 text-sm text-slate-600">
                            <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-900"><%= featured.Category?.name || 'Без категории' %></span>
                            <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold">
                                <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
                                <%= formatDate(featured.updatedAt) %>
                            </span>
                            <span class="inline-flex items-center gap-2 text-slate-600">
                                <span class="flex h-7 w-7 items-center justify-center rounded-full bg-slate-200 text-xs font-semibold uppercase"><%= (featured.User?.username || 'NA').slice(0, 2) %></span>
                                Автор: <span class="font-semibold text-slate-900"><%= featured.User?.username || 'Без автора' %></span>
                            </span>
                        </div>
                        <h2 class="text-3xl font-semibold leading-tight text-slate-900 md:text-4xl"><%= featured.title %></h2>
                        <p class="text-lg leading-relaxed text-slate-700"><%= preview(featured.content, 230) %></p>
                        <div class="flex flex-wrap items-center gap-4 pt-2">
                            <a href="/news/<%= featured.id %>" class="inline-flex items-center gap-2 rounded-full bg-slate-900 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5">
                                Читать полностью
                                <span aria-hidden="true">→</span>
                            </a>
                            <span class="text-sm text-slate-600">Обновлено <%= featured.updatedAt.toLocaleDateString('ru-RU', { day: '2-digit', month: 'short', hour: '2-digit', minute: '2-digit' }) %></span>
                        </div>
                    </div>
                </article>

                <div class="space-y-4">
                    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                        <p class="text-xs uppercase tracking-[0.25em] text-slate-500">Выбор редакции</p>
                        <ul class="mt-4 space-y-3">
                            <% if (!otherNews.length) { %>
                                <li class="rounded-xl border border-dashed border-slate-200 bg-slate-50 p-3 text-sm text-slate-600">Больше статей появится совсем скоро.</li>
                            <% } %>
                            <% otherNews.slice(0, 3).forEach(function(item) { %>
                                <li class="rounded-xl border border-slate-200 bg-white p-3 transition hover:-translate-y-0.5 hover:shadow-sm">
                                    <a href="/news/<%= item.id %>" class="block space-y-1">
                                        <div class="flex items-center justify-between text-xs text-slate-500">
                                            <span><%= item.Category?.name || 'Без категории' %></span>
                                            <span><%= formatDate(item.updatedAt) %></span>
                                        </div>
                                        <p class="font-semibold leading-snug text-slate-900"><%= item.title %></p>
                                        <p class="text-sm text-slate-600"><%= preview(item.content, 90) %></p>
                                        <p class="text-xs text-slate-500">Автор: <span class="text-slate-900"><%= item.User?.username || 'Без автора' %></span></p>
                                    </a>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                        <h3 class="text-lg font-semibold text-slate-900">Будьте в курсе</h3>
                        <p class="mt-2 text-sm text-slate-600">Подборки свежих публикаций без спама. Следите за обновлениями новостной ленты.</p>
                        <a href="/news" class="mt-4 inline-flex items-center gap-2 rounded-full border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-900 transition hover:bg-slate-100">
                            Открыть ленту
                            <span aria-hidden="true">→</span>
                        </a>
                    </div>
                </div>
            </div>

            <% if (otherNews.length) { %>
                <div class="space-y-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                    <div class="flex items-center justify-between gap-3">
                        <div>
                            <p class="text-sm text-slate-500">Еще материалы</p>
                            <h3 class="text-2xl font-semibold text-slate-900">Свежие публикации</h3>
                        </div>
                        <a href="/news" class="text-sm font-semibold text-slate-900 hover:underline">Все новости</a>
                    </div>
                    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
                        <% otherNews.forEach(function(item) { %>
                            <article class="group relative overflow-hidden rounded-xl border border-slate-200 bg-white p-5 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
                                <div class="relative space-y-3">
                                    <div class="flex items-center justify-between text-xs text-slate-500">
                                        <span class="rounded-full bg-slate-100 px-3 py-1 text-[11px] font-semibold text-slate-900"><%= item.Category?.name || 'Без категории' %></span>
                                        <span><%= formatDate(item.updatedAt) %></span>
                                    </div>
                                    <h4 class="text-xl font-semibold leading-snug text-slate-900"><%= item.title %></h4>
                                    <p class="text-sm leading-relaxed text-slate-600"><%= preview(item.content) %></p>
                                    <div class="flex items-center gap-3 text-sm text-slate-600">
                                        <div class="flex h-9 w-9 items-center justify-center rounded-full bg-slate-200 text-xs font-semibold uppercase"><%= (item.User?.username || 'NA').slice(0, 2) %></div>
                                        <div>
                                            <p class="font-semibold text-slate-900"><%= item.User?.username || 'Без автора' %></p>
                                            <p class="text-xs text-slate-500">Обновлено <%= item.updatedAt.toLocaleDateString('ru-RU') %></p>
                                        </div>
                                    </div>
                                    <a href="/news/<%= item.id %>" class="inline-flex items-center gap-2 text-sm font-semibold text-slate-900 hover:underline">Читать статью →</a>
                                </div>
                            </article>
                        <% }) %>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="rounded-2xl border border-dashed border-slate-300 bg-white p-10 text-center shadow-sm">
                <h2 class="text-2xl font-semibold text-slate-900">На главной пока нет статей</h2>
                <p class="mt-2 text-slate-600">Как только появятся публикации, они сразу будут здесь.</p>
                <div class="mt-6 flex justify-center gap-3">
                    <% if (isEditor || isAdmin) { %>
                        <a href="/news/create" class="inline-flex items-center gap-2 rounded-full bg-slate-900 px-5 py-2 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5">
                            Создать первую статью
                        </a>
                    <% } %>
                    <a href="/news" class="inline-flex items-center gap-2 rounded-full border border-slate-300 px-5 py-2 text-sm font-semibold text-slate-900 transition hover:bg-slate-100">
                        К списку новостей
                    </a>
                </div>
            </div>
        <% } %>
    </section>
</main>

<%- include('components/footer') %>
