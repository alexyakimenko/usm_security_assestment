<%- include('components/head', { page: { title: 'Главная | NewS' } }) %>
<%- include('components/navbar') %>

<main class="min-h-screen bg-gradient-to-b from-gray-950 via-gray-900 to-black text-white">
    <section class="container mx-auto px-4 py-14 space-y-12">
        <div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
            <div class="space-y-3">
                <p class="text-sm uppercase tracking-[0.25em] text-gray-400">Свежие статьи</p>
                <h1 class="text-4xl font-bold tracking-tight text-white">Главное за сегодня</h1>
                <p class="max-w-2xl text-gray-400">Избранные материалы редакции: дайджест новостей, аналитика и самые читаемые тексты.</p>
            </div>
            <a href="/news" class="inline-flex items-center gap-2 rounded-full border border-white/20 px-4 py-2 text-sm font-semibold text-white transition hover:-translate-y-0.5 hover:bg-white hover:text-gray-900">
                Смотреть все
                <span aria-hidden="true">→</span>
            </a>
        </div>

        <%
            const hasNews = Array.isArray(news) && news.length > 0
            const featured = hasNews ? news[0] : null
            const otherNews = hasNews ? news.slice(1) : []
            const formatDate = (value) => new Date(value).toLocaleDateString('ru-RU', { day: 'numeric', month: 'short' })
            const preview = (text, limit = 160) => {
                if (!text) return ''
                const clean = text.replace(/\s+/g, ' ').trim()
                return clean.length > limit ? clean.slice(0, limit) + '…' : clean
            }
        %>

        <% if (featured) { %>
            <div class="grid gap-8 xl:grid-cols-3 xl:gap-10">
                <article class="relative overflow-hidden rounded-3xl border border-white/10 bg-white/5 p-10 shadow-2xl ring-1 ring-white/10 xl:col-span-2">
                    <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_20%,rgba(94,234,212,0.12),transparent_40%),radial-gradient(circle_at_80%_0%,rgba(129,140,248,0.16),transparent_35%),radial-gradient(circle_at_50%_90%,rgba(236,72,153,0.12),transparent_45%)]"></div>
                    <div class="relative space-y-6">
                        <div class="flex flex-wrap items-center gap-3 text-sm text-gray-200">
                            <span class="rounded-full bg-white/10 px-3 py-1 text-xs font-semibold text-emerald-100"><%= featured.Category?.name || 'Без категории' %></span>
                            <span class="inline-flex items-center gap-2 rounded-full bg-white/5 px-3 py-1">
                                <span class="h-2 w-2 rounded-full bg-emerald-400"></span>
                                <%= formatDate(featured.updatedAt) %>
                            </span>
                            <span class="inline-flex items-center gap-2 text-gray-300">
                                <span class="flex h-6 w-6 items-center justify-center rounded-full bg-white/10 text-xs font-bold uppercase"><%= (featured.User?.username || 'NA').slice(0, 2) %></span>
                                Автор: <span class="font-semibold text-white"><%= featured.User?.username || 'Без автора' %></span>
                            </span>
                        </div>
                        <h2 class="text-3xl font-semibold leading-tight text-white md:text-4xl"><%= featured.title %></h2>
                        <p class="text-lg leading-relaxed text-gray-200"><%= preview(featured.content, 230) %></p>
                        <div class="flex flex-wrap items-center gap-4 pt-2">
                            <a href="/news" class="inline-flex items-center gap-2 rounded-full bg-white px-5 py-3 text-sm font-semibold text-gray-900 shadow-lg ring-2 ring-white/30 transition hover:-translate-y-0.5">
                                Читать далее
                                <span aria-hidden="true">→</span>
                            </a>
                            <span class="text-sm text-gray-300">Обновлено <%= featured.updatedAt.toLocaleDateString('ru-RU', { day: '2-digit', month: 'short', hour: '2-digit', minute: '2-digit' }) %></span>
                        </div>
                    </div>
                </article>

                <div class="space-y-4">
                    <div class="rounded-3xl border border-white/10 bg-white/5 p-6 shadow-xl">
                        <p class="text-sm uppercase tracking-[0.2em] text-gray-400">Выбор редакции</p>
                        <ul class="mt-4 space-y-3">
                            <% if (!otherNews.length) { %>
                                <li class="rounded-2xl bg-white/5 p-3 text-sm text-gray-300">Больше статей появится совсем скоро.</li>
                            <% } %>
                            <% otherNews.slice(0, 3).forEach(function(item) { %>
                                <li class="rounded-2xl bg-white/5 p-3 transition hover:-translate-y-0.5 hover:bg-white/10">
                                    <a href="/news" class="block space-y-1">
                                        <div class="flex items-center justify-between text-xs text-gray-300">
                                            <span><%= item.Category?.name || 'Без категории' %></span>
                                            <span><%= formatDate(item.updatedAt) %></span>
                                        </div>
                                        <p class="font-semibold leading-snug text-white"><%= item.title %></p>
                                        <p class="text-sm text-gray-300"><%= preview(item.content, 90) %></p>
                                        <p class="text-xs text-gray-400">Автор: <span class="text-white"><%= item.User?.username || 'Без автора' %></span></p>
                                    </a>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                    <div class="rounded-3xl border border-white/10 bg-gradient-to-r from-emerald-500/10 via-indigo-500/10 to-purple-500/10 p-6 shadow-xl">
                        <h3 class="text-lg font-semibold text-white">Будьте в курсе</h3>
                        <p class="mt-2 text-sm text-gray-200">Периодические подборки свежих публикаций без спама.</p>
                        <a href="/news" class="mt-4 inline-flex items-center gap-2 rounded-full border border-white/30 px-4 py-2 text-sm font-semibold text-white transition hover:bg-white hover:text-gray-900">
                            К новостям
                            <span aria-hidden="true">→</span>
                        </a>
                    </div>
                </div>
            </div>

            <% if (otherNews.length) { %>
                <div class="space-y-6 rounded-3xl border border-white/10 bg-white/5 p-6 shadow-inner">
                    <div class="flex items-center justify-between gap-3">
                        <div>
                            <p class="text-sm text-gray-400">Еще материалы</p>
                            <h3 class="text-2xl font-semibold text-white">Свежие публикации</h3>
                        </div>
                        <a href="/news" class="text-sm font-semibold text-emerald-200 transition hover:text-white">Открыть ленту →</a>
                    </div>
                    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
                        <% otherNews.forEach(function(item) { %>
                            <article class="group relative overflow-hidden rounded-2xl border border-white/10 bg-white/5 p-5 shadow-lg transition hover:-translate-y-1 hover:border-white/30">
                                <div class="absolute inset-0 bg-gradient-to-br from-white/0 via-white/0 to-white/10 opacity-0 transition group-hover:opacity-100"></div>
                                <div class="relative space-y-3">
                                    <div class="flex items-center justify-between text-xs text-gray-300">
                                        <span class="rounded-full bg-white/10 px-3 py-1 text-[11px] font-semibold text-emerald-100"><%= item.Category?.name || 'Без категории' %></span>
                                        <span><%= formatDate(item.updatedAt) %></span>
                                    </div>
                                    <h4 class="text-xl font-semibold leading-snug text-white"><%= item.title %></h4>
                                    <p class="text-sm leading-relaxed text-gray-300"><%= preview(item.content) %></p>
                                    <div class="flex items-center gap-3 text-sm text-gray-300">
                                        <div class="flex h-9 w-9 items-center justify-center rounded-full bg-white/10 text-xs font-bold uppercase"><%= (item.User?.username || 'NA').slice(0, 2) %></div>
                                        <div>
                                            <p class="font-semibold text-white"><%= item.User?.username || 'Без автора' %></p>
                                            <p class="text-xs text-gray-400">Обновлено <%= item.updatedAt.toLocaleDateString('ru-RU') %></p>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        <% }) %>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="rounded-3xl border border-dashed border-white/20 bg-white/5 p-10 text-center shadow-inner">
                <h2 class="text-2xl font-semibold text-white">На главной пока нет статей</h2>
                <p class="mt-2 text-gray-400">Как только появятся публикации, они сразу будут здесь.</p>
                <div class="mt-6 flex justify-center gap-3">
                    <% if (isEditor || isAdmin) { %>
                        <a href="/news/create" class="inline-flex items-center gap-2 rounded-full bg-white px-5 py-2 text-sm font-semibold text-gray-900 shadow-lg transition hover:-translate-y-0.5">
                            Создать первую статью
                        </a>
                    <% } %>
                    <a href="/news" class="inline-flex items-center gap-2 rounded-full border border-white/30 px-5 py-2 text-sm font-semibold text-white transition hover:bg-white hover:text-gray-900">
                        К списку новостей
                    </a>
                </div>
            </div>
        <% } %>
    </section>
</main>

<%- include('components/footer') %>
