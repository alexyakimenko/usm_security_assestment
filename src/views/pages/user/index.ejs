<%- include('../../components/head', { page: {title: 'Пользователи'} }) %>
<%- include('../../components/navbar') %>

<main class="bg-slate-50">
    <section class="container mx-auto max-w-6xl px-4 py-12 space-y-8">
        <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
            <div>
                <p class="text-sm text-slate-500">Список учётных записей</p>
                <h1 class="text-3xl font-bold text-slate-900">Пользователи</h1>
            </div>
            <a href="/" class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-slate-100">На главную</a>
        </div>

        <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
            <% users.forEach(function(user) { %>
                <a href="/user/profile/<%= user.username %>" class="group block rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
                    <div class="flex items-center gap-4">
                        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-slate-900 text-lg font-semibold text-white">
                            <%= user.username.slice(0,2).toUpperCase() %>
                        </div>
                        <div class="space-y-1">
                            <p class="text-sm text-slate-500">ID: <%= user.id %></p>
                            <h2 class="text-xl font-semibold text-slate-900"><%= user.username %></h2>
                            <p class="text-sm text-slate-600"><%= user.email %></p>
                            <div class="flex flex-wrap gap-2 pt-1">
                                <% (user.roles || []).forEach(function(role) { %>
                                    <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-900"><%= role.name %></span>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>
    </section>
</main>

<%- include('../../components/footer') %>
