<%- include('../components/head', { page: {title: 'Вход'} }) %>
<%- include('../components/navbar') %>
<main>
    <div class="container flex flex-col items-center justify-center mx-auto mt-20">
        <h1 class="text-2xl font-bold text-gray-900">Вход</h1>
        <form action="/auth/login" method="post" class="flex flex-col gap-4 border p-8 pt-4 mt-4 rounded">
            <div>
                <div class="flex flex-col">
                    <% for (let error of errors.username) { %>
                        <p class="text-red-900 text-xs"><%= error %></p>
                    <% } %>
                </div>
                <label for="username" class="flex flex-col gap-1">
                    <p>Логин</p>
                    <input class="border rounded px-2" type="text" name="username" id="username">
                </label>
            </div>
            <div>
                <div class="flex flex-col">
                    <% for (let error of errors.password) { %>
                        <p class="text-red-900 text-xs"><%= error %></p>
                    <% } %>
                </div>
                <label for="password">
                    <p>Пароль</p>
                    <input class="border rounded px-2" type="password" name="password" id="password">
                </label>
            </div>
            <button type="submit" class="bg-gray-900 text-white py-1 rounded cursor-pointer">Войти</button>
        </form>
        <% for (let error of errors.general) { %>
            <p class="text-red-900"><%= error %></p>
        <% } %>
    </div>
</main>
<%- include('../components/footer') %>
