<%- include('../components/head', { page: {title: 'Регистрация'} }) %>
<%- include('../components/navbar') %>

<main class="bg-slate-50">
    <section class="container mx-auto max-w-md px-4 py-12">
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm space-y-6">
            <div class="space-y-2">
                <p class="text-xs uppercase tracking-[0.3em] text-slate-500">Аккаунт</p>
                <h1 class="text-2xl font-bold text-slate-900">Создать аккаунт</h1>
                <p class="text-sm text-slate-600">Зарегистрируйтесь, чтобы публиковать и управлять материалами.</p>
            </div>

            <% if (errors.general.length) { %>
                <div class="space-y-2">
                    <% errors.general.forEach(function(error) { %>
                        <div class="rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800"><%= error %></div>
                    <% }) %>
                </div>
            <% } %>

            <form action="/auth/signup" method="post" class="space-y-4">
                <div class="space-y-1">
                    <label for="username" class="text-sm font-semibold text-slate-800">Имя пользователя</label>
                    <input class="w-full rounded-lg border border-slate-200 px-3 py-2 shadow-inner focus:border-slate-900 focus:outline-none" type="text" name="username" id="username" value="<%= prev.username %>" autocomplete="username">
                    <% errors.username.forEach(function(error) { %>
                        <p class="text-xs text-red-700"><%= error %></p>
                    <% }) %>
                </div>
                <div class="space-y-1">
                    <label for="email" class="text-sm font-semibold text-slate-800">Email</label>
                    <input class="w-full rounded-lg border border-slate-200 px-3 py-2 shadow-inner focus:border-slate-900 focus:outline-none" type="email" name="email" id="email" value="<%= prev.email %>" autocomplete="email">
                    <% errors.email.forEach(function(error) { %>
                        <p class="text-xs text-red-700"><%= error %></p>
                    <% }) %>
                </div>
                <div class="space-y-1">
                    <label for="password" class="text-sm font-semibold text-slate-800">Пароль</label>
                    <input class="w-full rounded-lg border border-slate-200 px-3 py-2 shadow-inner focus:border-slate-900 focus:outline-none" type="password" name="password" id="password" autocomplete="new-password">
                    <% errors.password.forEach(function(error) { %>
                        <p class="text-xs text-red-700"><%= error %></p>
                    <% }) %>
                </div>
                <div class="space-y-1">
                    <label for="password_confirm" class="text-sm font-semibold text-slate-800">Повторите пароль</label>
                    <input class="w-full rounded-lg border border-slate-200 px-3 py-2 shadow-inner focus:border-slate-900 focus:outline-none" type="password" name="password_confirm" id="password_confirm" autocomplete="new-password">
                    <% errors.password_confirm.forEach(function(error) { %>
                        <p class="text-xs text-red-700"><%= error %></p>
                    <% }) %>
                </div>
                <button type="submit" class="w-full rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-slate-800 cursor-pointer">Зарегистрироваться</button>
            </form>
            <p class="text-center text-sm text-slate-600">Уже есть аккаунт?
                <a href="/auth/login" class="font-semibold text-slate-900 hover:underline">Войти</a>
            </p>
        </div>
    </section>
</main>

<%- include('../components/footer') %>
