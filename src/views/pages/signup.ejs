<%- include('../components/head', { page: {title: 'Регистрация'} }) %>
<%- include('../components/navbar') %>
<main>
    <div class="container flex flex-col items-center justify-center mx-auto mt-20">
        <h1 class="text-2xl font-bold text-gray-900">Регистрация</h1>
        <form action="" class="flex flex-col gap-4 border p-8 pt-4 mt-4 rounded">
            <label for="username" class="flex flex-col gap-1">
                <p>Логин</p>
                <input class="border rounded px-2" type="text" name="username" id="username">
            </label>
            <label for="email">
                <p>Почта</p>
                <input class="border rounded px-2" type="email" name="email" id="email">
            </label>
            <label for="password">
                <p>Пароль</p>
                <input class="border rounded px-2" type="password" name="password" id="password">
            </label>
            <label for="password_confirm">
                <p>Подтвердите пароль</p>
                <input class="border rounded px-2" type="password" name="password_confirm" id="password_confirm">
            </label>
            <button type="submit" class="bg-gray-900 text-white py-1 rounded cursor-pointer">Зарегистрироваться</button>
        </form>
    </div>
</main>
<%- include('../components/footer') %>
