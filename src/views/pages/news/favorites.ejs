<%- include('../../components/head', { page: { title: 'Избранное' } }) %>
<%- include('../../components/navbar') %>
<main class="bg-slate-50">
  <section class="container mx-auto max-w-6xl px-4 py-12 space-y-8">
    <%
      const preview = (text, limit = 160) => {
        if (!text) return ''
        const clean = text.replace(/\s+/g, ' ').trim()
        return clean.length > limit ? clean.slice(0, limit) + '…' : clean
      }
    %>
    <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
      <div>
        <p class="text-sm text-slate-500">Новости по выбранным категориям</p>
        <h1 class="text-3xl font-bold text-slate-900">Избранное</h1>
      </div>
      <div class="flex gap-3">
        <a href="/categories" class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-slate-100">Управлять подписками</a>
        <a href="/" class="rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-800">На главную</a>
      </div>
    </div>

    <div class="space-y-3">
      <p class="text-sm font-semibold text-slate-800">Категории</p>
      <div class="flex items-center gap-2 overflow-x-auto rounded-xl border border-slate-200 bg-white p-3">
        <a href="/news/favorites" class="whitespace-nowrap rounded-lg px-3 py-2 text-sm font-semibold shadow-sm transition <%= !activeCategoryId ? 'bg-slate-900 text-white' : 'bg-slate-100 text-slate-800 hover:bg-slate-200' %>">Все</a>
        <% categories.forEach(function(category) { %>
          <a href="/news/favorites?category=<%= category.id %>" class="whitespace-nowrap rounded-lg px-3 py-2 text-sm font-semibold shadow-sm transition <%= Number(activeCategoryId) === Number(category.id) ? 'bg-slate-900 text-white' : 'bg-slate-100 text-slate-800 hover:bg-slate-200' %>">
            <%= category.name %>
          </a>
        <% }) %>
      </div>
    </div>

    <% if (!hasSubscriptions) { %>
      <div class="rounded-2xl border border-dashed border-slate-300 bg-white p-10 text-center shadow-sm space-y-3">
        <h2 class="text-2xl font-semibold text-slate-900">Пока нет подписок</h2>
        <p class="text-slate-600">Подпишитесь на интересные категории, чтобы получать персональную ленту.</p>
        <div class="flex justify-center gap-3 pt-2">
          <a href="/categories" class="rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-800">Выбрать категории</a>
          <a href="/news" class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-slate-100">Ко всем новостям</a>
        </div>
      </div>
    <% } else if (news.length === 0) { %>
      <div class="rounded-2xl border border-dashed border-slate-300 bg-white p-10 text-center shadow-sm space-y-3">
        <h2 class="text-2xl font-semibold text-slate-900">Нет новостей в выбранной категории</h2>
        <p class="text-slate-600">Выберите другую категорию или добавьте новые материалы.</p>
      </div>
    <% } else { %>
      <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
        <% news.forEach(function(item) { %>
          <article class="group relative overflow-hidden rounded-xl border border-slate-200 bg-white p-5 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
            <div class="relative space-y-3">
              <div class="flex items-center justify-between text-xs text-slate-500">
                <span class="rounded-full bg-slate-100 px-3 py-1 text-[11px] font-semibold text-slate-900"><%= item.Category?.name || 'Без категории' %></span>
                <span><%= item.updatedAt.toLocaleDateString('ru-RU', { day: 'numeric', month: 'short' }) %></span>
              </div>
              <h4 class="text-xl font-semibold leading-snug text-slate-900"><%= item.title %></h4>
              <p class="text-sm leading-relaxed text-slate-600"><%= preview(item.content) %></p>
              <div class="flex items-center gap-3 text-sm text-slate-600">
                <div class="flex h-9 w-9 items-center justify-center rounded-full bg-slate-200 text-xs font-semibold uppercase"><%= (item.User?.username || 'NA').slice(0, 2) %></div>
                <div>
                    <p class="font-semibold text-slate-900"><%= item.User?.username || 'Без автора' %></p>
                    <p class="text-xs text-slate-500">Обновлено <%= item.updatedAt.toLocaleDateString('ru-RU') %></p>
                </div>
              </div>
              <a href="/news/<%= item.id %>" class="inline-flex items-center gap-2 text-sm font-semibold text-slate-900 hover:underline">Читать статью →</a>
            </div>
          </article>
        <% }) %>
      </div>
    <% } %>
  </section>
</main>

<%- include('../../components/footer') %>
