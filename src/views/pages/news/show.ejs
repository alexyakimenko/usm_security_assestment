<%- include('../../components/head', { page: { title: newsItem.title } }) %>
<%- include('../../components/navbar') %>

<main class="bg-slate-50">
  <section class="container mx-auto max-w-5xl px-4 py-12 space-y-6">
    <div class="flex items-center justify-between gap-3">
      <a href="/news" class="inline-flex items-center gap-2 text-sm font-semibold text-slate-700 hover:underline">← К списку новостей</a>
      <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-900"><%= newsItem.Category?.name || 'Без категории' %></span>
    </div>

    <article class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm space-y-6">
      <div class="space-y-3">
        <div class="flex flex-wrap items-center gap-3 text-sm text-slate-600">
          <span class="inline-flex items-center gap-2">
            <span class="flex h-8 w-8 items-center justify-center rounded-full bg-slate-200 text-xs font-semibold uppercase"><%= (newsItem.User?.username || 'NA').slice(0,2) %></span>
            <span class="font-semibold text-slate-900"><%= newsItem.User?.username || 'Без автора' %></span>
          </span>
          <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">Обновлено <%= newsItem.updatedAt.toLocaleDateString('ru-RU', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' }) %></span>
          <span class="text-xs text-slate-500">ID: <%= newsItem.id %></span>
        </div>
        <h1 class="text-3xl font-bold text-slate-900 md:text-4xl"><%= newsItem.title %></h1>
      </div>

      <div class="space-y-4 text-lg leading-relaxed text-slate-800 whitespace-pre-line">
        <%= newsItem.content %>
      </div>
    </article>
  </section>
</main>

<%- include('../../components/footer') %>
